{
  // VSCode theme
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontSize": 14,
  "editor.lineHeight": 18,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.rulers": [80, 120],
  "editor.renderLineHighlight": "gutter",
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // VSCode terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Hack Nerd Font",

  // Python
  "python.venvPath": "${workspaceFolder}/.venv",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.analysis.autoImportCompletions": true,
  "python.linting.pydocstylePath": "$(asdf which pydocstyle)",
  "python.linting.mypyPath": "$(asdf which mypy)",
  "python.linting.banditPath": "$(asdf which bandit)",
  "python.linting.flake8Path": "$(asdf which pyflakes)",
  "python.linting.pydocstyleEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.banditEnabled": true,
  "python.linting.flake8Enabled": true,
  // "$(asdf which black)" not working
  "python.formatting.blackPath": "/Users/martinig/.asdf/installs/python/3.8.8/bin/black",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "79"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },

  // Shell
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // Jupyter
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  // Terraform
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },

  // TODO
  "todohighlight.include": [
    "**/*.py",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
  ]
}
