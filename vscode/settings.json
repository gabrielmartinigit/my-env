{
    // VSCode theme
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontSize": 14,
    "editor.lineHeight": 18,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.renderLineHighlight": "gutter",
    "editor.wordWrap": "on",
    // VSCode terminal
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    // Cloud and architecture
    "hediet.vscode-drawio.local-storage": "",
    "aws.profile": "profile:default",
    // Docs
    "restructuredtext.builtDocumentationPath": "${workspaceRoot}/docs/build/html",
    "restructuredtext.confPath": "${workspaceRoot}/docs/source",
    "restructuredtext.updateOnTextChanged": "true",
    "restructuredtext.updateDelay": 1000,
    "restructuredtext.linter.executablePath": "/Users/martinig/.asdf/installs/python/3.9.0/bin/rstcheck",
    // Python
    "python.linting.pylamaEnabled": true,
    "python.linting.pylamaPath": "/Users/martinig/.asdf/installs/python/3.9.0/bin/pylama",
    "python.linting.pylintEnabled": false,
    "python.linting.pylintUseMinimalCheckers": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/Users/martinig/.asdf/installs/python/3.9.0/bin/black",
    "python.autoComplete.addBrackets": true,
    // JS
    "typescript.updateImportsOnFileMove.enabled": "always",
}
